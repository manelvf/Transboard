# Transboard Environment Configuration
# Copy this file to .env and configure for your environment

# Application Environment
RACK_ENV=development

# Server Configuration
PORT=4567
HOST=0.0.0.0

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/transboarddb
MONGODB_DATABASE=transboarddb

# Email Configuration (Pony)
SMTP_ADDRESS=smtp.example.com
SMTP_PORT=587
SMTP_DOMAIN=example.com
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-password
SMTP_FROM=noreply@example.com

# Session Configuration
SESSION_SECRET=change-me-to-a-random-string-in-production

# Application Settings
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=.po,.pot

# Development Settings
RACK_LOGGER_LEVEL=info
RELOADER_ENABLED=true

# Production Settings (uncomment for production)
# RACK_ENV=production
# RACK_LOGGER_LEVEL=warn
# RELOADER_ENABLED=false
